{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RUN: Add-on",
            "type": "shell",
            "command": "python run.py ../dev/data/dev_options.json ../dev/data/options.json",
            "options": {
                "cwd": "${workspaceFolder}/hassio-google-drive-backup"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "RUN: Mock Hass.io Server",
            "type": "shell",
            "command": "python mock_hassio.py",
            "options": {
                "cwd": "${workspaceFolder}/dev"
            },
            "problemMatcher": []
        },
        {
            "label": "RUN: Add-on in Docker Instance",
            "type": "shell",
            "command": "${workspaceFolder}/run_local_docker.bat",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "STOP: Add-on in docker",
            "type": "shell",
            "command": "docker kill $(docker ps -q --filter \"label=run-from-vscode=1\")",
            "problemMatcher": []
        },
        {
            "label": "PUBLISH: New version to Docker Hub",
            "type": "shell",
            "command": "${workspaceFolder}/deploy.bat",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
        ,
        {
            "label": "DEPLOY: Add-on to local hassio",
            "type": "shell",
            "command": "python deploy_local_addon.py \\\\hassio",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}