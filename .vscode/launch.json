    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run Addon (Dev Backends)",
            "type": "python",
            "request": "launch",
            "pythonPath": "/usr/bin/python3.8",
            "module": "backup",
            "cwd": "${workspaceFolder}/hassio-google-drive-backup",
            "args": ["dev"]
        },
        {
            "name": "Run Addon (Real Google Drive)",
            "type": "python",
            "request": "launch",
            "pythonPath": "/usr/bin/python3.8",
            "module": "backup",
            "cwd": "${workspaceFolder}/hassio-google-drive-backup",
            "args": ["drive"]
        },
        {
            "name": "Run Mock Backend Server",
            "type": "python",
            "request": "launch",
            "pythonPath": "/usr/bin/python3.8",
            "module": "backup.dev.simulationserver",
            "cwd": "${workspaceFolder}/hassio-google-drive-backup"
        },

        {
            "name": "Run Buggy Test",
            "type": "python",
            "request": "launch",
            "pythonPath": "/usr/bin/python3.8",
            "module": "pytest",
            "args": ["hassio-google-drive-backup/backup/tests/test_uiserver.py::test_retain"],
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        },
        {
            "name": "Python Attach (Remote Debug docker addon)",
            "type": "python",
            "request": "attach",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/hassio-google-drive-backup",  // You may also manually specify the directory containing your source code.
                    "remoteRoot": "/app" // Linux example; adjust as necessary for your OS and situation.
                }
            ],
            "port": 3000,                   // Set to the remote port.
            "host": "local-hassio-google-drive-backup"               // Set to your remote host's public IP address.
        }
    ]
}